@model StudentExerciseMVC.Models.ViewModels.StudentCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add a Student</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.StudentFirstName" class="control-label"></label>
                <input asp-for="Student.StudentFirstName" class="form-control" />
                <span asp-validation-for="Student.StudentFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StudentLastName" class="control-label"></label>
                <input asp-for="Student.StudentLastName" class="form-control" />
                <span asp-validation-for="Student.StudentLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StudentSlackHandle" class="control-label"></label>
                <input asp-for="Student.StudentSlackHandle" class="form-control" />
                <span asp-validation-for="Student.StudentSlackHandle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.CohortId" class="control-label"></label>
                <select asp-for="Student.CohortId" asp-items="@Model.CohortOptions"></select>
                <span asp-validation-for="Student.CohortId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
