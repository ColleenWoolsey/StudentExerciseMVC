@model StudentExerciseMVC.Models.Student


@{
    ViewData["Title"] = "Details";
}

<h2>Student</h2>

<div>
    <h4>Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentFirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentFirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentLastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentSlackHandle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentSlackHandle)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cohort.CohortName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cohort.CohortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ListofExercises)
        </dt>
        <ol>
            @foreach (var item in Model.ListofExercises)
            {
                <li>
                    @Html.DisplayFor(model => item.ExerciseName)
                    @Html.DisplayFor(model => item.Language)
                </li>
            }
        </ol>


    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
